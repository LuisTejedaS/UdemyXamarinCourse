<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hello_world.StackLayoutEx1Page"
              BackgroundColor="#127ac7" >
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" BackgroundColor="#127ac7" Spacing="20">
            <Label Text="Welcome to Xamarin Forms!"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Label Text="Cross-platform apps made easy"
                   FontSize="18"
                   HorizontalOptions="Center"/>
            <Button Text="Login" BackgroundColor="#1dabf0"></Button>
            <Button Text="Register" BackgroundColor="#1dabf0"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>